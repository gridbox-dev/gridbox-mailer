{
  "name": "gridbox-mailer",
  "version": "0.0.1",
  "description": "Send mails in a simple way through Gridbox mailer.",
  "author": {
    "name": "Gridbox",
    "url": "https://gridbox.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gridbox-dev/gridbox-mailer.git"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./transporters": {
      "import": "./dist/transporters/index.mjs",
      "require": "./dist/transporters/index.js"
    },
    "./types": {
      "import": "./dist/types/index.mjs",
      "require": "./dist/types/index.js"
    },
    "./lib": {
      "import": "./dist/lib/index.mjs",
      "require": "./dist/lib/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/transporters/index.ts src/types/index.ts src/lib/index.ts --format esm,cjs --dts --out-dir dist",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "lint": "eslint --fix . --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "email",
    "mailer",
    "gridbox",
    "node",
    "nodemailer",
    "email sender"
  ],
  "license": "MIT",
  "dependencies": {
    "handlebars": "^4.7.8",
    "nodemailer": "^6.9.16",
    "nodemailer-sendgrid": "^1.0.3"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.17",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  }
}
